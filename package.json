{
  "name": "Buenox-electron",
  "version": "1.0.1",
  "description": "Application Buenox stable avec Electron.js",
  "main": "dist/main.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "eslint . --ext .ts,.tsx --fix && ts-prune | tee ts-prune-report.txt",
    "build": "tsc && electron-rebuild",
    "lastBuild": "npx electron-rebuild -f -w Buenox_raw_input --arch=x64 --runtime=electron --version 26.6.10",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "compile": "tsc",
    "rebuild": "electron-rebuild",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:portable": "electron-builder --win portable",
    "dist:zip": "electron-builder --win zip",
    "dist:all": "electron-builder --win portable zip",
    "install-deps": "npm install",
    "postinstall": "electron-builder install-app-deps",
    "watch": "tsc --watch"
  },
  "keywords": [
    "Buenox",
    "cursor",
    "overlay"
  ],
  "author": "Yohan",
  "license": "MIT",
  "gypfile": true,
  "dependencies": {
    "eslint-plugin-unused-imports": "^4.2.0",
    "nan": "^2.23.0",
    "typescript-eslint": "^8.44.0",
    "chokidar": "^4.0.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.5.2",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "jscodeshift": "^17.3.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^10.0.0",
    "rimraf": "^5.0.10",
    "ts-morph": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.Buenox.app",
    "productName": "Buenox",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/*.js",
      "dist/*.d.ts",
      "overlay.html",
      "overlay.css",
      "config.json",
      "build/Release/Buenox_raw_input.node",
      "assets/**/*",
      "!**/node_modules/*/{test,__tests__,example,examples}/**",
      "!**/*.map",
      "!dist/*.exe",
      "!dist/*.zip",
      "!dist/win-unpacked",
      "!**/{*.ts,*.tsx}",
      "!**/{*.test.*,*.spec.*}",
      "!**/README*",
      "!**/readme*",
      "!**/CHANGELOG*",
      "!**/changelog*",
      "!**/.git*",
      "!**/docs/**",
      "!**/test/**",
      "!**/tests/**"
    ],
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "Buenox-${version}-${arch}.${ext}"
    },
    "asarUnpack": [
      "**/*.node",
      "assets/**/*"
    ],
    "compression": "store",
    "nsis": {
      "oneClick": false
    },
    "electronLanguages": [
      "en",
      "fr"
    ],
    "extraResources": [
      "assets/icon.ico"
    ],
    "extraMetadata": {
      "electronLocales": [
        "en-US",
        "fr"
      ]
    }
  }
}
