{
  "name": "buenox",
  "version": "1.0.3",
  "description": "Application Buenox stable avec Electron.js",
  "main": "dist/main.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "npx rimraf dist out release dist-app-new .cache",
    "build": "tsc && electron-rebuild --only=Buenox_raw_input",
    "start": "powershell -ExecutionPolicy Bypass -File export-cursors.ps1 && npm run build && npx electron .",
    "dist": "npm run clean && powershell -ExecutionPolicy Bypass -File export-cursors.ps1 && npm run build && npx electron-builder --win"
  },
  "keywords": [
    "Buenox",
    "cursor",
    "overlay"
  ],
  "author": "Yohan",
  "license": "MIT",
  "gypfile": true,
  "dependencies": {
    "chokidar": "^4.0.3",
    "decode-ico": "^0.4.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "nan": "^2.23.0",
    "typescript-eslint": "^8.44.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.5.2",
    "canvas": "^3.2.0",
    "electron": "^26.0.0",
    "npx electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "gifencoder": "^2.0.1",
    "jscodeshift": "^17.3.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^10.0.0",
    "rimraf": "^5.0.10",
    "ts-morph": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.Buenox.app",
    "productName": "Buenox",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/*.js",
      "dist/*.d.ts",
      "overlay.html",
      "overlay.css",
      "config.json",
      "cursors.json",
      "cursorsToUse.json",
      "export-cursors.ps1",
      "ani-to-gif.mjs",
      "build/Release/Buenox_raw_input.node",
      "bin/**/*.node",
      "assets/**/**/*",
      "assets/**/*",
      "!**/*.{md,MD,markdown}",
      "!**/{test,tests,__tests__,spec,example,examples,benchmark}/**",
      "!**/*.map",
      "!dist/*.exe",
      "!dist/*.zip",
      "!dist/win-unpacked",
      "!**/{*.ts,*.tsx}",
      "!**/*.d.ts",
      "!**/*.{test.*,*.spec.*}",
      "!**/{README*,readme*}",
      "!**/{CHANGELOG*,changelog*}",
      "!**/.git*",
      "!**/.eslint*",
      "!**/.prettier*",
      "!**/docs/**",
      "!**/test/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/scripts/**",
      "!**/demo/**"
    ],
    "compression": "normal",
    "artifactName": "Buenox-${version}-${arch}-${os}.${ext}",
    "afterPack": "scripts/afterPack.js",
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    },
    "asarUnpack": [
      "**/*.node",
      "**/*.dll",
      "assets/**/*",
      "bin/**/*",
      "cursors.json",
      "cursorsToUse.json",
      "export-cursors.ps1",
      "ani-to-gif.mjs"
    ],
    "electronLanguages": [
      "en",
      "fr"
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "extraResources": [
      "assets/icon.ico",
      "assets/custom"
    ],
    "extraMetadata": {
      "electronLocales": [
        "en-US",
        "fr"
      ]
    }
  }
}
